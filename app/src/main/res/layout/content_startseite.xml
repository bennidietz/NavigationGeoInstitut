<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/colorPrimaryDark"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Startseite"
    tools:showIn="@layout/activity_startseite">

    <TextView
        android:id="@+id/main_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="Herzlich willkommen im Geo-Institut!\n\nWo wollen Sie hin?"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/menü_für_raum"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_aktuelle_position_anzeigen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/buttonstyle"
            android:backgroundTint="@color/blau"
            android:textColor="@color/white"
            android:layout_marginRight="5dp"
            android:text="Aktuelle Position anzeigen" />

        <Button
            android:id="@+id/btn_zu_raum_navigieren"
            android:layout_width="0dp"
            android:backgroundTint="@color/rot"
            android:layout_marginLeft="5dp"
            android:background="@drawable/buttonstyle"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="Zu einem Raum navigieren"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/menü_allgemein"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_raum_suchen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/buttonstyle"
            android:backgroundTint="@color/rot"
            android:textColor="@color/white"
            android:layout_marginRight="5dp"
            android:text="Raum suchen" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>